<?xml version="1.0" encoding="utf-8"?>

                                                              
                                                        

    
                 
                            
                                                                     
           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" android:tag="layout/fragment_test_word_goal_0" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <Button
            android:id="@+id/button_word30"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/main_button_color"
            android:text="30개"
            android:textColor="@color/white"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2" />

        <Button
            android:id="@+id/button_word50"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginTop="80dp"
            android:backgroundTint="@color/main_button_color"
            android:text="50개"
            android:textColor="@color/white"
            android:textSize="25dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_word30" />

        <Button
            android:id="@+id/button_word70"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/main_button_color"
            android:layout_marginTop="80dp"
            android:text="70개"
            android:textColor="@color/white"
            android:textSize="25dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_word50" />


    </androidx.constraintlayout.widget.ConstraintLayout>

         